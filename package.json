{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engineStrict": true,
  "engines": {
    "node": ">= 6.2.0"
  },
  "devDependencies": {
    "@types/jest": "^15.1.32",
    "jest": "^15.1.1",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.11",
    "typescript": "^2.0.3"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "compile": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -t stylish '{src,test}/**/*.{ts}'",
    "l": "npm run lint --silent",
    "test": "jest",
    "test:watch": "jest --watch",
    "t:w": "npm run test:watch",
    "test:coverage": "jest --coverage",
    "t:c": "npm run test:coverage --silent"
  },
  "author": "Jakub Synowiec <jakub@jakubsynowiec.info> (https://jakubsynowiec.info)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsynowiec/node-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/jsynowiec/node-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/jsynowiec/node-typescript-boilerplate#readme",
  "jest": {
    "testEnvironment": "node",
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "<rootDir>(test/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "dependencies": {
    "@types/node": "^6.0.40"
  }
}
