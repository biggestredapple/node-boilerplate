{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Minimalistic boilerplate to quick-start Node.js development in TypeScript.",
  "engineStrict": true,
  "engines": {
    "node": ">= 6.2.0"
  },
  "devDependencies": {
    "jest": "^15.1.1",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.10",
    "typescript": "^1.8.10",
    "typings": "^1.3.3"
  },
  "scripts": {
    "postinstall": "typings install",
    "clean": "rimraf coverage build tmp",
    "compile": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -t stylish '{src,test}/**/*.{ts}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Jakub Synowiec <jakub@jakubsynowiec.info> (https://jakubsynowiec.info)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsynowiec/node-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/jsynowiec/node-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/jsynowiec/node-typescript-boilerplate#readme",
  "jest": {
    "testEnvironment": "node",
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "moduleFileExtensions": ["ts", "js"],
    "testPathDirs": ["<rootDir>/test"],
    "testRegex": ".*(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "globals": {
      "NODE_ENV": "test"
    }
  }
}
