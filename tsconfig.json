{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": [
    "node_modules/@types/**/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
